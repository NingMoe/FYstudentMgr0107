@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "全部问题-博奥网";
}
@Html.Action("Bar", "Class", new { id = ViewBag.ClassID })
<div class="container text mgb80">
    <div class="row">
        <div class="col-lg-9 ">
            <div class=" bg-white pd20">
                <div class="sortlist clearfix">
                    <ul class="list-unstyled nav-class">
                        <li>
                            <a href="/Class/Default/@ViewBag.ClassID"><i class="icon icon-home"></i><span class="text">班级首页</span></a>
                        </li>
                        <li>
                            <a href="/Lesson/Default/@ViewBag.ClassID"><i class="icon icon-couseList"></i><span class="text">课程表</span></a>
                        </li>
                        <li>
                            <a href="/Discuss/Default/@ViewBag.ClassID"><i class="icon icon-anque"></i><span class="text">答疑</span></a>
                        </li>
                        <li class="on item">
                            <a href="/Note/Default/@ViewBag.ClassID"><i class="icon icon-note"></i><span class="text">笔记</span></a>
                        </li>

                        <li>
                            <a href="/QusBank/Default/@ViewBag.ClassID"><i class="icon icon-data"></i><span class="text">题库</span></a>
                        </li>


                        <li class="item">
                            <a href="/BBS/Index/@ViewBag.SubjectID" target="_blank"><i class="icon icon-bbs"></i><span class="text">讨论</span></a>
                        </li>

                    </ul>
                </div>
                <div class="mgt20" style="border:none;">
                    <div id="choiceNavi" data-classid="@ViewBag.ClassID" class="navi-cont clearfix">
                        <ul class="list-unstyled clearfix">
                            <li class="active">
                                <a class="subject" id="mynote" data-toggle="tab">课程笔记</a>
                            </li>
                            <li class="">
                                <a class="subject" id="myerror" data-toggle="tab">课后错题</a>
                            </li>
                        </ul>
                    </div>
                    <div id="notePart">
                    </div>
                    <div id="collectedPart">
                    </div>

                    <div id="noteWrapper">

                    </div>
                </div>
            </div>
         
        </div>




        <div class="col-lg-3 bg-white">
            @Html.Action("LessonGroup", "Note", new { classid = ViewBag.ClassID, userid = User.Identity.GetUserId<int>() })
        </div>
        <div id="lessonid" class="hidden">@ViewBag.LessonID</div>
        <div class="modal  fade" id="tipModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3 id="myModalLabel">提示</h3>
                    </div>
                    <div class="modal-body text-center">
                        <p class="f16">你确定要删除这个题目？这个题目的备注也会被删除哦。</p>
                        <div class="mgt20">
                            <a id="removeCollected" href="#" class="btn btn-danger  btn-large" data-loading-text="删除中…">确定</a>
                            <a href="#" class="btn btn-primary btn-large mgl20" data-dismiss="modal">取消</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
        </div>
@Html.Partial("../Shared/Tool")
@section Scripts {
    <script type="text/javascript">

        seajs.use("modules/note/default", function (e) {

        });
    </script>
}
