@{
    ViewBag.Title = "手机号找回密码";
}
<div class="content">
    
    <div id="form-container">
        <div class="title">
            <h2>找回登录密码</h2>
            <div class="form-nav">
                <div class="item step1-nav step-active">
                    <span class="step step-nav-active">1</span>
                    <p>身份验证</p>
                    <div class="line1 "></div>
                </div>
                <div class="item step2-nav">
                    <span class="step">2</span>
                    <p>密码修改</p>
                </div>
            </div>
        </div>
        <div class="step-1 step" data-type="0" data-step="2" data-bi="findpassword_smscode_getcode">

            <div>
                <div class="list">
                    <label>手机号码</label>
                    <input type="text" id="mobile" class="mobile "  aria-required="true" aria-describedby="mobile-error" aria-invalid="false">
                    <div class="info info2" >
                        <span><em></em></span>
                        <div class="inner"></div>
                    </div>
                </div>
            </div>
            <div>
                <div class="list">
                    <label>图形验证</label>
                    <input type="text" id="imgcode" name="imgcode" class="imgcode input-width " aria-required="true" aria-describedby="imgcode-error" aria-invalid="false">
                    <div class="imark">
                        <img src="/Account/GetAuthCode" class="captcha" id="captcha">
                    </div>
                    <div class="info  info2">
                        <span><em></em></span>
                        <div class="inner">

                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div class="list">
                    <label>短信验证</label>
                    <input type="text" placeholder="请输入验证码" id="msgcode" name="msgcode" class="input-width">
                    <button class="btn-mark btn-mark-active" id="getcode" type="button">获取验证码</button>
                    <div class="info  info2">
                        <span><em></em></span>
                        <div class="inner">
                        </div>
                    </div>
                </div>
            </div>
            <button class="step1-next btn-common">下一步</button>

        </div>
        <div class="step-2" style="display:none;">

            <div>
                <div class="list">
                    <label>设置登录密码</label>
                    <input type="password" name="newpwd" id="newpwd" class="pwd" maxlength="20">
                    <div class="tip left-custome">
                        <span><em></em></span>
                        <div class="inner">
                            6-20位字母、数字或符号混合<br>
                            不可与用户名一致
                        </div>
                    </div>

                    <div class="info info1 left-custome">
                        <span><em></em></span>
                        <div class="inner">
                        </div>
                    </div>
                </div>
            </div>
            <ul class="strong">
                <li></li>
                <li></li>
                <li></li>
            </ul>
            <div>
                <div class="list">
                    <label>确认登录密码</label>
                    <input type="password" name="renewpwd" id="renewpwd" maxlength="20">
                    <div class="info  left-custome">
                        <span><em></em></span>
                        <div class="inner">
                        </div>
                    </div>
                </div>
            </div>
            <input type="hidden" value="2" name="gettype">
            <button class="step2-next btn-common">确定</button>

        </div>

    </div>
</div>

<div class="modal fade text" id="msgCodePopup" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3>提示</h3>
            </div>
            <div class="modal-body">
                <p>短信验证码错误，请重试！</p>
            </div>

        </div>
    </div>
</div>
<div class="modal fade text" id="SuccessPopup" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3>提示</h3>
            </div>
            <div class="modal-body">
                <p>修改密码成功！<a id="goindex" href="/course/index">去首页</a></p>
            </div>

        </div>
    </div>
</div>

@Html.Partial("../Shared/Tool")
@section Scripts {
    <script type="text/javascript">

        seajs.use("modules/account/pwdresetmobile");
    </script>
}



