@model FYstudentMgr.Models.Courses.Lesson

@{
    ViewBag.Title = "编辑课时";
}
<div class="container mgt20 mgb80 text">
    <div class="panel panel-green col-lg-9 pd0">
        <div class="panel-heading">
            <a href="/Home/Admin">博奥管理后台</a>>><a href="/Subject/Index">课程管理</a>>><a href="/Course/Details/@Model.Unit.Section.CourseID">@Model.Unit.Section.Course.CourseName</a>>>第 @Model.Unit.Sort 课 @Model.Unit.UnitName>>编辑课时
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal mgt40 mgr20">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LessonID)
        <input type="hidden" name="UnitID" value="@Model.Unit.UnitID" />
        <input type="hidden" name="CourseID" value="@Model.Unit.Section.CourseID" />
        <input type="hidden" name="Sort" value="@Model.Sort" />
        <input type="hidden" name="Duration" value="@Model.Duration" />
        <input type="hidden" name="CreateTime" value="@Model.CreateTime" />
        <div class="form-group">
            @Html.LabelFor(model => model.LessonType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.LessonType, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LessonType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LessonName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LessonName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LessonName, "", new { @class = "text-danger" })
            </div>
        </div>






        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存修改" class="btn btn-default" />
            </div>
        </div>
    </div>
        }
    </div>
</div>
@Html.Partial("../Shared/Tool")
@section Scripts {
    <script type="text/javascript">

        seajs.use("modules/lesson/edit");
    </script>
}
