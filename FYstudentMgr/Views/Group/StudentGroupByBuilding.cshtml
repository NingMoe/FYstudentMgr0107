@model IEnumerable<FYstudentMgr.ViewModels.ChartModels.StudentBuildingGroup>

<div id="chartContainer" style="height: 400px; width: 100%;"></div>

@section Scripts {
<script src="~/Scripts/canvasjs.min.js"></script>
    <script type="text/javascript">

    $(function () {
       
        function onClick(e) {
            alert("Type: " + e.dataSeries.type + ", dataPoint { x:" + e.dataPoint.label + ", y: " + e.dataPoint.y + " }");
        };
       var chart = new CanvasJS.Chart("chartContainer",
        {
            title: {
                text: "各楼栋学生分布情况"
            },
            data: [
            {
                click: onClick,
                cursor: "pointer",
                type: "column",
                dataPoints: @Html.Raw(ViewBag.DataPoints),
                    },
                    {
                        click: onClick,
                        cursor: "pointer",
                        type: "line",
                        dataPoints: @Html.Raw(ViewBag.DataPoints),
                    }]
                });

                chart.render();
        });
</script>

    
    
    }
  
    
    