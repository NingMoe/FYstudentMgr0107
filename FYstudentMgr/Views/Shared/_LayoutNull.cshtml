
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 博奥教育选课系统</title>
  
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
    <style type="text/css">
        .navbar .nav > li .dropdown-menu {
            margin: 0;
        }

        .navbar .nav > li:hover .dropdown-menu {
            display: block;
        }
    </style>@*设置导航栏菜单鼠标滑过效果*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("博奥教育选课系统", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                 
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                    <li>@Html.ActionLink("联系我们", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container " >
        <div class="row ">
            
                @RenderBody()
            
        </div>
        <div class="row">
            <hr />
            <footer id="footer">
                <div class="container text">
                    <dl>
                        <dd><a title="关于我们" href="http://www.kejuwang.com/about/us" target="_blank">关于我们</a></dd>
                        <dd><a title="联系我们" href="http://www.kejuwang.com/about/contact" target="_blank">联系我们</a></dd>
                        <dd><a title="使用协议" href="http://www.kejuwang.com/about/agreement" target="_blank">使用协议</a></dd>
                        <dd><a title="使用协议" href="http://www.kejuwang.com/about/job" target="_blank">人才招聘</a></dd>
                    </dl>
                    <div class="followus pull-right" style="margin-top:-20px;">
                        <a class="followus-weixin" href="javascript:;" target="_blank" title="微信">
                            <div class="flw-weixin-box"></div>
                        </a>
                        <a class="followus-qzone" href="http://user.qzone.qq.com/1596313433/" target="_blank" title="QQ空间"></a>
                    </div>
                    <div class="footer_copyright">
                        <a title="友情链接" href="http://www.xcjacca.com/" class="mgl20" target="_blank">飞扬财经</a>
                        <a href="http://www.3rong.org" title="友情链接" class="mgl20" target="_blank">三容教育</a>
                        <div id="copyright" class="pull-left">
                            <span>Copyright &copy; 2011-2016 博奥网  南昌博奥教育科技有限公司</span>
                            <a title="赣ICP备09053718号" target="_blank" href="http://www.miibeian.gov.cn/">赣ICP备09053718号</a>
                        </div>
                    </div>
                </div>

            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")

  
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
