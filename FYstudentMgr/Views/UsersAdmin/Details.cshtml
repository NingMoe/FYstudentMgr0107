@model FYstudentMgr.Models.ApplicationUser

@{
    ViewBag.Title = "用户信息详情";
}

<h2>详细</h2>
<div class="container mgt20 text mgb80">
    <div>
        <h4>用户</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                用户名   @*@Html.DisplayNameFor(model => model.UserName)*@
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt>
                真是姓名   @*@Html.DisplayNameFor(model => model.UserName)*@
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Student.Name)
            </dd>
        </dl>
    </div>
    <h4>该用户所拥有的的角色</h4>
    @if (ViewBag.RoleNames.Count == 0)
    {
        <hr />
        <p>该用户目前没有设置角色</p>
    }

    <table class="table">

        @foreach (var item in ViewBag.RoleNames)
        {
            <tr>
                <td>
                    @item
                </td>
            </tr>
        }
    </table>
    <p>
        @Html.ActionLink("编辑", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("返回列表", "Index")
    </p>

</div>

