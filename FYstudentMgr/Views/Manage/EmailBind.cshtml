@model FYstudentMgr.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "邮箱找回密码";
}
<div class="content">
    <div id="nav">
        <dl>
            <dt><i class="icon-money"></i> 我的账户</dt>
            <dd>
                <a href="/manage/index">账户首页</a>
            </dd>
            <dd>
                <a href="//instalment.hujiang.com/pc/acct/myAcctAll">优学宝分期</a>
            </dd>
            <dd>
                <a href="#">我的银行卡</a>
            </dd>
            <dd>
                <a href="/manage/orderlist" >我的订单</a>
            </dd>
            <dt><i class="icon-user"></i> 个人设置</dt>
            <dd>
                <a href="/manage/info" class="">基本资料</a>
            </dd>
            <dd>
                <a href="/manage/secure" class="active">帐号安全</a>
            </dd>
        </dl>
    </div>
    <div id="form-container">
        <div class="title">
            <h2>绑定邮箱</h2>
        </div>
        <div class="step-1">

            <div>
                <div class="list">
                    <label>邮箱</label>
                    <input type="text" class="email" name="email"  >
                    <div class="info  left_custome">
                        <span><em></em></span>
                        <div class="inner">

                        </div>
                    </div>
                </div>
            </div>
            <div class="imgcode-list">
                <div class="list">
                    <label>图形验证</label>
                    <input type="text" name="imgcode" id="imgcode" class="imgcode input-width">
                    <div class="imark">
                        <img src="/Account/GetAuthCode" class="captcha" id="captcha">
                    </div>
                    <div class="info left_custome">
                        <span><em></em></span>
                        <div class="inner">
                        </div>
                    </div>
                </div>
            </div>
            <button class="step1-next btn-common">确定</button>

        </div>
        <div class="step-2">
            <p>已向<span class="mail-url"></span>发送验证邮件，请在30分钟内点击验证链接方可成功重置。</p>
            <p>超过30分钟验证链接将过期，需重新发送。</p>
            <div class="btn-container">
                <a href="" class="link link-email"><button class="btn-active">去邮箱验证</button></a>
                <a href="/manage/secure" class="link"><button class="btn-inactive">返回</button></a>
            </div>
        </div>
    </div>
</div>

@Html.Partial("../Shared/Tool")
@section Scripts {
    <script type="text/javascript">

        seajs.use("modules/manage/emailbind");
    </script>
}



